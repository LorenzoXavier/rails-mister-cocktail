<div class="container">
  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path('drink/whiskey.jpg') %>)">
      <li>
        <h1>Name - <%= @cocktail.name %></h1>
        <% @doses.each do |dose| %>

          <p><%= dose.description %> of <%= dose.ingredient.name %>   <%= link_to " ", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } , class: "fa fa-trash destroy_dose" %></p>

        <% end %>
      </li>
    </div>
  </div>
</div>

<div class="container">
  <p><%= link_to "add ingredients and amounts", new_cocktail_dose_path(@cocktail, @dose), class: "btn-ghost" %></p>


  <p><%= link_to "Return to all cocktails", cocktails_path(@cocktails), class: "btn-ghost" %></p>
</div>
