<div class="container">
  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path('drink/whiskey.jpg') %>)">
      <li>
        <h1>Name - <%= @cocktail.name %></h1>
        <% @doses.each do |dose| %>

          <p><%= dose.description %> of <%= dose.ingredient.name %><%= link_to "Delete dose ingredient", dose_path(dose), method: :delete, class: "btn-ghost" %></p>

        <% end %>
      </li>
    </div>
  </div>
</div>

<div class="container">
  <h2><%= link_to "add ingredients and amounts", new_cocktail_dose_path(@cocktail, @dose), class: "btn-ghost" %></h2>


  <h2><%= link_to "Return to all cocktails", cocktails_path(@cocktails), class: "btn-ghost" %></h2>
</div>
