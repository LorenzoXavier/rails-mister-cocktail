<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path('background/cocktails.jpg') %>)">
  <li>
  <h1>Mad Mollys Molecular Marvels</h1>
    <p><%= link_to "Add a cocktail", new_cocktail_path, class: "btn-ghost" %></p>
  </li>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |drink| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path drink.photo, height: 500, width: 500, crop: :thumb %>')">

          <!-- <img src="https://picsum.photos/120/80?random"> -->
          <div class="card-product-infos">
            <h2><%= link_to drink.name, cocktail_path(drink) %></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>




